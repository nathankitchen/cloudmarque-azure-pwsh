{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Alerts": {
            "type": "array"
        },
        "Workspace": {
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2021-02-01-preview",
            "name": "[parameters('Alerts')[copyIndex('AlertCopy')].name]",
            "location": "[parameters('Workspace').location]",
             "copy": {
                "name": "AlertCopy",
                "count": "[length(parameters('Alerts'))]"
            },
            "tags": {
                "cm-service": "[parameters('Alerts')[copyIndex('AlertCopy')].service.publish.logAlert]"
            },
            "properties": {
                "displayName": "[parameters('Alerts')[copyIndex('AlertCopy')].name]",
                "description": "[parameters('Alerts')[copyIndex('AlertCopy')].description]",
                "severity": "[parameters('Alerts')[copyIndex('AlertCopy')].severity]",
                "enabled": "[parameters('Alerts')[copyIndex('AlertCopy')].enabled]",
                "evaluationFrequency": "[parameters('Alerts')[copyIndex('AlertCopy')].schedule.frequencyInMinutes]",
                "scopes": [
                    "[parameters('Workspace').resourceId]"
                ],
                "windowSize": "[parameters('Alerts')[copyIndex('AlertCopy')].schedule.timeWindowInMinutes]",
                "criteria": {
                    "allOf": [
                        {
                            "query": "[parameters('Alerts')[copyIndex('AlertCopy')].query]",
                            "timeAggregation": "Count",
                            "operator": "[parameters('Alerts')[copyIndex('AlertCopy')].threshold.Operator]",
                            "threshold": "[parameters('Alerts')[copyIndex('AlertCopy')].threshold.value]"

                        }
                    ]
                },
                "autoMitigate": "[parameters('Alerts')[copyIndex('AlertCopy')].autoMitigation]",
                "muteActionsDuration": "[if(empty(parameters('Alerts')[copyIndex('AlertCopy')].suppress), json('null'), parameters('Alerts')[copyIndex('AlertCopy')].suppress.mins)]",
                "actions": "[parameters('Alerts')[copyIndex('AlertCopy')].actions]"
            }
        }
    ]
}
